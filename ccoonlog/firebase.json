{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "redirects": [
      {
        "source": "/login",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/**",
        "destination": "/",
        "type": 302
      }
    ]
  }
}
